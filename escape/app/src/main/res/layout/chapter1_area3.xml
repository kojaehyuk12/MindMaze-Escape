<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="horizontal"
    android:background="@drawable/chapter1_background">

    <TableLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:layout_margin="1px">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/puzzlePiece1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="0dp"
                android:contentDescription="Puzzle Piece 1"
                android:scaleType="fitXY"
                android:src="@drawable/chapter1_puzzle_empty" />

            <ImageView
                android:id="@+id/puzzlePiece2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="0dp"
                android:contentDescription="Puzzle Piece 2"
                android:scaleType="fitXY"
                android:src="@drawable/chapter1_puzzle_empty" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/puzzlePiece3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="0dp"
                android:contentDescription="Puzzle Piece 3"
                android:scaleType="fitXY"
                android:src="@drawable/chapter1_puzzle_empty" />

            <ImageView
                android:id="@+id/puzzlePiece4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="0dp"
                android:contentDescription="Puzzle Piece 4"
                android:scaleType="fitXY"
                android:src="@drawable/chapter1_puzzle_empty" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="10dp">

        <android.widget.Button
            android:id="@+id/closeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="8dp"
            android:text="닫기"
            android:background="@drawable/button_background"
            android:textColor="@android:color/white"
            android:fontFamily="@font/font_1"/>

        <LinearLayout
            android:id="@+id/bagLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/bag_inside">

            <GridView
                android:id="@+id/gridView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numColumns="2"
                android:columnWidth="120dp"
                android:verticalSpacing="20dp"
                android:horizontalSpacing="20dp"
                android:stretchMode="columnWidth"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>