<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chapter1_area_background">

    <ImageView
        android:id="@+id/popupImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:contentDescription="Popup Image"
        android:scaleType="fitXY"
        android:src="@drawable/chapter1_area6_ground_letter" />

    <TextView
        android:id="@+id/storyTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="100dp"
        android:paddingHorizontal="50dp"
        android:fontFamily="@font/font_1"
        android:textStyle="bold"
        android:textColor="#550000"
        android:text="달빛 때문에 잠을 잘 수가 없어.
        \n누가 좀 저 달빛을 안 보이게 해줘."
        android:textSize="18sp" />
</RelativeLayout>